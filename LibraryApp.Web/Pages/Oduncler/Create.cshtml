@page
@model LibraryApp.Web.Pages.Oduncler.CreateModel
@{
    ViewData["Title"] = "Yeni Ödünç İşlemi Ekle";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Yeni Ödünç İşlemi Ekle</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form method="post" asp-antiforgery="true">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Odunc.UyeId" class="form-label">Üye *</label>
                                    <select asp-for="Odunc.UyeId" asp-items="Model.UyeListesi" class="form-select">
                                        <option value="0">-- Üye Seçiniz --</option>
                                    </select>
                                    <span asp-validation-for="Odunc.UyeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Odunc.KitapId" class="form-label">Kitap *</label>
                                    <select asp-for="Odunc.KitapId" asp-items="Model.KitapListesi" class="form-select">
                                        <option value="0">-- Kitap Seçiniz --</option>
                                    </select>
                                    <span asp-validation-for="Odunc.KitapId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Odunc.OduncTarihi" class="form-label">Ödünç Tarihi *</label>
                                    <input asp-for="Odunc.OduncTarihi" type="date" class="form-control" />
                                    <span asp-validation-for="Odunc.OduncTarihi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Bilgi</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        * işaretli alanlar zorunludur.
                    </p>
                    <p class="text-muted">
                        Ödünç verilen kitaplar varsayılan olarak aktif durumda kaydedilir.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}