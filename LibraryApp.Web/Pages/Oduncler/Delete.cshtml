@page "{id:int}"
@model LibraryApp.Web.Pages.Oduncler.DeleteModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ödünç İşlemi Sil";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Ödünç İşlemi Sil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. Silmek istediğinizden emin misiniz?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Ödünç Bilgileri:</h5>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><strong>Üye:</strong></td>
                                        <td>@(Model.Odunc?.Uye?.AdSoyad ?? "Bilinmeyen Üye")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Kitap:</strong></td>
                                        <td>@(Model.Odunc?.Kitap?.Ad ?? "Bilinmeyen Kitap")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Ödünç Tarihi:</strong></td>
                                        <td>
                                            @if (Model.Odunc?.OduncTarihi != null)
                                            {
                                                <span class="badge bg-secondary">@Model.Odunc.OduncTarihi.ToString("dd.MM.yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>İade Tarihi:</strong></td>
                                        <td>
                                            @if (Model.Odunc?.IadeTarihi.HasValue == true)
                                            {
                                                <span class="badge bg-success">@Model.Odunc.IadeTarihi.Value.ToString("dd.MM.yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Durum:</strong></td>
                                        <td>
                                            @if (Model.Odunc?.Aktif == true)
                                            {
                                                <span class="badge bg-warning text-dark">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Teslim Edildi</span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <div class="text-center text-muted">
                                <i class="fas fa-book-reader fa-4x mb-3"></i>
                                <p>Bu ödünç işlemi kalıcı olarak silinecektir.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Bu ödünç işlemini silmek istediğinizden emin misiniz?')">
                            <i class="fas fa-trash"></i> Sil
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>