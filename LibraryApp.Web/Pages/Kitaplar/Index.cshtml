@page
@model LibraryApp.Web.Pages.Kitaplar.IndexModel
@{
    ViewData["Title"] = "Kitaplar";
}

<h2>Kitaplar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Yazar</th>
            <th>Yayın Yılı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kitap in Model.Kitaplar)
        {
            <tr>
                <td>@kitap.Ad</td>
                <td>@kitap.Yazar</td>
                <td>@kitap.YayimYili</td>
                <td>
                    <!-- Düzenleme ve Silme linkleri buraya -->
                </td>
            </tr>
        }
    </tbody>
</table>
