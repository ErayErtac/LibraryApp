@page
@model LibraryApp.Web.Pages.Uyeler.CreateModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Yeni Üye Ekle";
}

<h2>Yeni Üye Ekle</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Uye.AdSoyad"></label>
        <input asp-for="Uye.AdSoyad" class="form-control" />
        <span asp-validation-for="Uye.AdSoyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Uye.Eposta"></label>
        <input asp-for="Uye.Eposta" class="form-control" />
        <span asp-validation-for="Uye.Eposta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Uye.Telefon"></label>
        <input asp-for="Uye.Telefon" class="form-control" />
        <span asp-validation-for="Uye.Telefon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Uye.KayitTarihi"></label>
        <input asp-for="Uye.KayitTarihi" type="date" class="form-control" />
        <span asp-validation-for="Uye.KayitTarihi" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary me-2">Ekle</button>
        <a asp-page="Index" class="btn btn-secondary">İptal</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
