@page
@model LibraryApp.Web.Pages.Uyeler.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Üyeler";
}

<h2>Üyeler</h2>

<a asp-page="Create" class="btn btn-primary mb-3">Yeni Üye Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>Kayıt Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model.Uyeler)
        {
            <tr>
                <td>@uye.AdSoyad</td>
                <td>@uye.Eposta</td>
                <td>@uye.Telefon</td>
                <td>@uye.KayitTarihi.ToString("dd.MM.yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@uye.Id">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@uye.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
