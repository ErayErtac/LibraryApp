@page
@model LibraryApp.Web.Pages.Uyeler.IndexModel

@{
    ViewData["Title"] = "Üyeler";
}

<h2>Üyeler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model.Uyeler)
        {
            <tr>
                <td>@uye.AdSoyad</td>
                <td>@uye.Eposta</td>
                <td>@uye.Telefon</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@uye.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-page="Delete" asp-route-id="@uye.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
