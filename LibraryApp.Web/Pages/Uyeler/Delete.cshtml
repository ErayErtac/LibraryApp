@page "{id:int}"
@model LibraryApp.Web.Pages.Uyeler.DeleteModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Üye Sil";
}

<h2>Üye Sil</h2>

<h4>@Model.Uye.AdSoyad</h4>
<p>E-posta: @Model.Uye.Eposta</p>
<p>Telefon: @Model.Uye.Telefon</p>
<p>Kayıt Tarihi: @Model.Uye.KayitTarihi.ToString("dd.MM.yyyy")</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-page="Index" class="btn btn-secondary">İptal</a>
</form>
